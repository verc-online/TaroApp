@page
@model TaroApp.Web.Pages.TaroCardEditModel
@{
    ViewData["Title"] = $"Редактирование карты {Model.Card.Postfix} {Model.Card.Title}";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h1>@Model.Card.Postfix @Model.Card.Title</h1>
                    @if (Model.Card.CardImage is not null)
                    {
                        <img class="mx-auto"
                             style="width: 200px;"
                             src="data:image/jpg;base64,@Convert.ToBase64String(Model.Card.CardImage)"
                             alt="@ViewData["Title"]">
                    }
                    <h2 class="text-center">Описание карты</h2>
                    <p>
                        @Model.Card.ImageDesc
                    </p>
        </div>
        <div class="col">
            <h1>Редактирование карты</h1>
                    <form method="post" enctype="multipart/form-data">
                        <div class="input-group mb-3">
                            <input type="file" class="form-control" id="inputGroupFile02" asp-for="Upload">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Описание изображение</span>
                            <textarea class="form-control" aria-label="Описание изображение" asp-for="ImageDesc"></textarea>
                        </div>
                        <button class="btn btn-primary" type="submit">Сохранить</button>
                    </form>
                
        </div>
    </div>
</div>